{
  "Server": {
    "Port": 8080
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_URL};Port=5432;Database=neondb;Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true;"
  },
  "Frontend": {
    "Url": "${FRONTEND_URL}"
  },
  "GoogleGemini": {
    "ApiKey": "${GEMINI_API_KEY}"
  },
  "Email": {
    "Host": "smtp.sendgrid.net",
    "Port": 587,
    "Username": "apikey",
    "Password": "${SENDGRID_API_KEY}",
    "EnableSsl": true,
    "DefaultEncoding": "UTF-8"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}